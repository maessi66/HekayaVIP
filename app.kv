<SplashScreen>:
    name: "splash"

    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.2, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            source: "screens/logo.png"
            size_hint: 0.5, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.6}

        Label:
            text: "Hekaya VIP"
            font_size: "32sp"
            color: 1, 1, 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.3}



